<% currently_at 'Posts' %>
<h1>Posts</h1>
<div class="btn-group mb-3">
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  <%= link_to 'Download', posts_path(format: :zip), class: 'btn btn-secondary' %>
</div>
<div class="py-1">
  <%= render 'search' %>
</div>
<div class="my-2">
  <%= paginate @posts %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Attachments</th>
      <th scope="col" class="text-nowrap">Published at</th>
      <th scope="col">Region</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts.decorate %>
  </tbody>
</table>
<div class="py-2">
  <%= paginate @posts %>
</div>