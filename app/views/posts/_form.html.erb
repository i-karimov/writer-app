<%= render 'shared/errors', object: @post %>
<%= form_with model: @post do |f| %>
  <div class="form-group mb-3 row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :title,  placeholder: 'Title', class: 'form-control' %>
  </div>
  <div class="form-group mb-3 row">
    <%= f.label :content, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :content,  placeholder: 'Content', class: 'form-control col-sm-10', rows: 10 %>
  </div>

   <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">Region</label>
    </div>
    <%= f.select :region_id, @regions.pluck(:name, :id), class: "custom-select" %>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">Status</label>
    </div>
    <%= f.select :status, Post.aasm.states_for_select, class: "custom-select" %>
  </div>

  <div class="form-group mb-3 row">
    <%= f.label "Images (#{@post.images.size})", class: "col-sm-2 col-form-label" %>
    <%= f.file_field :images, multiple: true, class: 'form-control' %>
  </div>
  <div class="form-group mb-3 row">
    <%= f.label "Files (#{@post.files.size})", class: "col-sm-2 col-form-label" %>
    <%= f.file_field :files, multiple: true, class: 'form-control' %>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
