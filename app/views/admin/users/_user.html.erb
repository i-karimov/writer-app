<tr>
  <th scope="row" class="text-muted"> <%= user.id %></th>
  <td> <%= user.full_name %> </td>
  <td> <%= user.email %> </td>
  <td> <%= user.region&.name %> </td>
  <td> <%= user.role %> </td>
  <td> <%= user.registration_date %> </td>
  <td>
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-outline-secondary" %>
      <% unless current_user == user %>
        <%= link_to 'Delete', admin_user_path(user), class: "btn btn-outline-secondary", data: { method: :delete, confirm: 'Are you sure?' } %>
      <% end%>
    </div>
  </td>
</tr>